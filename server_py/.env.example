# EnableU Learning Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === Admin Account Configuration ===
# Set secure credentials for the primary admin account
# IMPORTANT: Change these to strong, unique values in production!
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeThisToASecurePassword123!

# === Security Configuration ===
# JWT Secret Key - Generate a strong random string
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this

# Session timeout in minutes (default: 30)
SESSION_TIMEOUT_MINUTES=30

# === Database Configuration ===
# Database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/enableu

# === Application Configuration ===
# Flask environment: development, production, or testing
FLASK_ENV=development

# Enable debug mode (set to False in production!)
DEBUG=True

# === Email Configuration (for password reset, future use) ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password
# SMTP_USE_TLS=True

# === CORS Configuration ===
# Allowed origins for CORS (comma-separated for multiple)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
